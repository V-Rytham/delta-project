<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h1>Edit this Listing</h1>

            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3 ">
                    <label for="title">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                </div>

                <div class="mb-3 ">
                    <label for="description" class="">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                </div>
                
                <div class="mb-3">
                    Original Listing Image
                    <img src="<%= originalImageUrl %>" alt="Previusly uploaded image">
                </div>

                <div class="mb-3 ">
                    <label class="form-label" for="image">Upload New Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label class="form-label" for="price">Price</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                                        
                    </div>
                    <div class="mb-3 col-md-8">
                        <label class="form-label" for="location">Country</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                    </div>
                </div>
                
                

                <div class="mb-3 ">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                </div>
                
                        

                <button class="edit-btn btn btn-dark">Update</button>

                <br><br>
            </form>
        </div>
    </div>
    
    
    
</body>
</html>